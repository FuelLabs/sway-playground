{
    "name": "sway-playground",
    "version": "0.0.1",
    "private": true,
    "description": "Sway Playground",
    "author": "Fuel Labs <contact@fuel.sh> (https://fuel.network/)",
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "homepage": "https://github.com/FuelLabs/sway-playground",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FuelLabs/sway-playground.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/FuelLabs/sway-playground/issues"
    },
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "deps:update": "updates -gu && pnpm -r exec updates -gu",
        "dev:install": "pnpm install --filter=app",
        "dev": "pnpm run --filter=app dev",
        "node:dev": "fuelhat node",
        "nodes:start": "fuelhat node start -t",
        "nodes:stop": "fuelhat node stop -t",
        "nodes:reset": "pnpm nodes:stop && pnpm nodes:start",
        "server:debug": "cargo build && cargo run --bin sway-playground",
        "server:start": "cargo run"
    },
    "dependencies": {
        "fuelhat": "workspace:*",
        "http-server": "^14.1.1"
    },
    "devDependencies": {
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "dotenv": "^16.0.3",
        "typescript": "^4.9.5",
        "updates": "^13.2.8"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowAny": [
                "react",
                "react-dom"
            ],
            "ignoreMissing": [
                "react",
                "react-dom"
            ]
        },
        "overrides": {
            "glob-parent@<5.1.2": ">=5.1.2",
            "json5": ">=2.2.2",
            "trim-newlines@<3.0.1": ">=3.0.1",
            "trim@<0.0.3": ">=0.0.3",
            "debug@<3.1.0": ">=3.1.0"
        }
    }
}
